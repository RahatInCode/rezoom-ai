{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,        // needed for express, cors, dotenv default imports
    "strict": true,
    "outDir": "dist/backend",
    "rootDir": "backend",           // point to backend folder
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["node_modules"]
}
