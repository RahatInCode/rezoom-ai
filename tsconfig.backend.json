{
  "compilerOptions": {
    "target": "ES2020",                      
    "module": "CommonJS",                    
    // "module": "esnext",                   
    "rootDir": "Backend",                    
    "outDir": "dist/backend",                
    "strict": true,                          
    "esModuleInterop": true,                 
    "moduleResolution": "node",              
    "resolveJsonModule": true,               
    "types": ["node"],                       
    "forceConsistentCasingInFileNames": true
  },
  "include": ["Backend/**/*"],
  "exclude": ["node_modules", "dist"]
}
